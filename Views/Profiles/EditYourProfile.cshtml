@model Dejtinghemsida.Models.EditYourProfileViewModel
@using Dejtinghemsida.Models

@{

    ViewBag.Title = "Redigera Profil";
    Layout = "~/Views/Shared/_SignedInLayout.cshtml";
}

<h2>Redigera din profil</h2>
<div class="container-fluid">


    <div class="row" style="padding-left: 300px;">

        @using (Html.BeginForm("Update", "Profiles"))
        {

            <div class="col">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentUser.Förnamn)
                    @Html.TextBoxFor(m => m.CurrentUser.Förnamn, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentUser.Efternamn)
                    @Html.TextBoxFor(m => m.CurrentUser.Efternamn, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentUser.Kön)
                    @Html.DropDownListFor(m => m.CurrentUser.Kön, new SelectList(Enum.GetValues(typeof(ApplicationUser.Gender))), " ", new { @class = "form-control" })
                </div>

            </div>

            <div class="col">

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentUser.Sysselsättning)
                    @Html.TextBoxFor(m => m.CurrentUser.Sysselsättning, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentUser.Ålder)
                    @Html.TextBoxFor(m => m.CurrentUser.Ålder, new { @class = "form-control" })

                </div>

            </div>
            <button type="submit" class="btn btn-primary btn-primary">Spara</button>
        }

        <div class="form-group">
           

            @using (Html.BeginForm("ChangeProfilePicture", "Profiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.LabelFor(m => m.UserPhoto)

                <div class="align-content-lg-start">
                    <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" , new {@class="form-control" } />
                </div>

                <div class="align-content-lg-start">
                    <button type="submit" class="btn btn-primary btn-sm">Byt</button>
                </div>
            }
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


